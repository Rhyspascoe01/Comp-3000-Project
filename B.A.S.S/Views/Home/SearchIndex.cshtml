@model IEnumerable<B.A.S.S.Models.RouteController>
@{
    ViewData["Title"] = "Home Page";
    string CheckName = "A";

}
<div class="container">
    <div class="vertical-center">
        <table>
            <thead>
                <tr>
                    <th>Route Number</th>
                    <th>Routes</th>
                    <th>This bus is late by</th>
                    <th>Day schedule</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    if (CheckName != @item.RouteName)
                    {
                        <tr>
                            <td style="background-color : @item.Colour ">@item.RouteNumber</td>
                            <td>@item.RouteDescription</td>
                            <td>@item.LateTime minutes</td>
                            <td>@item.RunningSummary</td>
                            <td> <a asp-area="" asp-controller="Home" asp-action="TimeTableViewer" class="btn btn-md btn-primary" asp-route-id="@item.RouteID">View Timetable</a></td>
                        </tr>
                    }
                    CheckName = @item.RouteName;
                }
            </tbody>
            <a asp-area="" asp-controller="Home" asp-action="LogInPage" class="btn btn-md btn-primary"> Log in</a>
        </table>
